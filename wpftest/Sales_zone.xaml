                <MenuItem Header="Manage Your account" Click="menu_password_change"></MenuItem>
            </MenuItem>
            <MenuItem Name="about"  Margin="20,0,5,0" Header="About" MouseEnter="about_MouseEnter" MouseLeave="about_MouseLeave" Click="about_Click"/>
